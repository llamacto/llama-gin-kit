# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件通用规则
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go 文件规则
[*.go]
indent_style = tab
indent_size = 4

# YAML 文件规则
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown 文件规则
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# SQL 文件规则
[*.sql]
indent_style = space
indent_size = 4

# 配置文件规则
[*.{json,toml}]
indent_style = space
indent_size = 2
